# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Contributors
GET		/contributors/				controllers.Contributors.index()
GET		/contributors/:id			controllers.Contributors.get(id:Long)
GET		/contributors/create/		controllers.Contributors.create()
POST	/contributors/				controllers.Contributors.save()
GET		/contributors/delete/:id	controllers.Contributors.remove(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
